{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
    "paths": {
      "@/*": ["./src/*"],
    },
    "sourceMap": true,
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noEmitOnError": true,
    "jsx": "react-jsx",
  },
  "include": [
    "src",
    ".eslintrc.cjs",
    "vite.config.ts",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json",
    }
  ],
}
